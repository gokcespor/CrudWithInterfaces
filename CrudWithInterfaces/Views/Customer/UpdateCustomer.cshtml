
@model Customer


<h2>Müşteri Güncelle</h2>

<form asp-controller="Customer" asp-action="UpdateCustomer" method="post">
	<div class="form-group">
		<label asp-for="Name">Müşteri Adı: </label>
		<input asp-for="Name" />
	</div>
	<div class="form-group">
		<label asp-for="Age">Müşterinin Yaşı: </label>
		<input asp-for="Age" />
	</div>
	<input asp-for="Id" hidden/>
	<button class="btn btn-primary" type="submit">Müşteri Güncelle</button>
</form>