
@model Customer

<h2>Yeni Müşteri Ekleyiniz</h2>

<form asp-controller="Customer" asp-action="AddCustomer" method="post">
	<div class="form-group">
		<label for="Name">Müşteri Adı: </label>
		<input class="form-control" type="text" name="Name"/>
	</div>
	<div class="form-group">
		<label for="Age">Müşterinin Yaşı:  </label>
		<input class="form-control" type="number" name="Age" required />
	</div>
	<button class="btn btn-primary" type="submit">Müşteri Ekle</button>
</form>
